# CODING BAT > Warmup-1 > pos_neg

def pos_neg(a, b, negative):
    if negative == True:
        if a <= 0 and b <= 0:
            return True
    else:
        if (a >= 0 and b <= 0) or (a <= 0 and b >= 0):
            return True
    return False


print(pos_neg(-2, 1, False))
print(pos_neg(1, 1, True))
